{
  "name": "vision",
  "version": "1.0.0",
  "description": "AI agent",
  "main": "dist/app.js",
  "scripts": {
    "start": "NODE_PATH=./dist node -r tsconfig-paths/register dist/app.js",
    "dev": "NODE_PATH=./src nodemon --watch 'src/**/*.ts' --exec 'ts-node -r tsconfig-paths/register' --files src/app.ts",
    "build": "tsc && tsc-alias",
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,json,md}\"",
    "type-check": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/samwang0723/vision.git"
  },
  "author": "sam.wang",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/samwang0723/vision/issues"
  },
  "homepage": "https://github.com/samwang0723/vision#readme",
  "dependencies": {
    "@slack/bolt": "^4.2.0",
    "axios": "^1.7.9",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "html-to-text": "^9.0.5",
    "tsconfig-paths": "^4.2.0",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/html-to-text": "^9.0.4",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "eslint": "^8.35.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.4.3",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.8",
    "prettier-eslint": "^16.3.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.8",
    "typescript": "^5.0.3"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
